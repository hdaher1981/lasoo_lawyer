
<%= simple_form_for(@lawyerinfo) do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :current_firm, collection: ["magic circle", "silver circle", "US firm", "Top 30 City"]%>
  <%= f.input :job_title, collection: ["Junior Associate", "Mid-Level Associate", "Senior Associate"] %>
  <%= f.input :pqe %>
  <%= f.input :university %>
  <%= f.input :degree_classification, collection: ["1st", "2.1", "2.2"] %>
  <%= f.input :expected_salary %>
  <%= f.input :job_status, collection: ["Actively seeking", "Could be tempted", "Not actively seeking"] %>
  <%= f.input :practice_area, collection: ["Litigation", "Finance", "Corporate", "Employment"] %>
  <%= f.input :firm_type, collection: ["magic circle", "silver circle", "US firm", "Top 30 City"] %>
  <%= f.input :interests %>
  <%= f.input :post_code %>
  <div class="cv-input">
    <%= f.input :cv %>
    <%= f.input :cv_cache, as: :hidden %>
  </div>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>
