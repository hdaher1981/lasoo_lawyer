<div class="container">
  <div class="row">
    <div class="firm-sign-up">
      <div class="col-xs-4 col-sm-4 col-md-offset-4">
        <div class="simple">
          <h2 class="text-center"> Law Firm </h2>
          <h4 class="text-center">Sign Up</h4>
          <%= simple_form_for(@firm_info) do |f| %>
          <%= f.input :first_name %>
          <%= f.input :last_name %>
          <%= f.input :firm_name %>
          <%= f.input :job_title %>
          <%= f.submit :submit %>
        <% end %>
      </div>
    </div>
  </div>
  </div>
</div>
